          <div class="loginbg">
            <div class="login_container"><div class="login_container_bg"></div>
              <h1>Roast Meister</h1><h3 style="margin-top: -10px;"> for iOS</h3><br>
              <h4 class="form-signin-heading loginbg">Sign in with...</h4><br>
              <div class="loginlist">
                <div class="buttoncontainer"><a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook fa-lg"></span><br>Facebook</a></div>
                <div class="buttoncontainer"><a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter fa-lg"></span><br>Twitter</a></div>
                <div class="buttoncontainer"><a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus fa-lg"></span><br>Google+</a></div>
              </div>
            </div>
            <div style="margin-top: 10px;">
              <a href="/adminlogin">Admin Log-in</a>
            </div>
          </div>
