    <style media="screen">
    body {
      padding-top: 0px;
    }
    div.bg {
      background: url("http://s30.postimg.org/uvcoj0noh/coffee_bg.jpg") no-repeat center center fixed;
      -webkit-background-size: cover;
      -moz-background-size: cover;
      -o-background-size: cover;
      background-size: cover;
      position: absolute;
      width: 100%;
      height: 100%;
    }



    .container {

      text-align: center;
      height: 100%;

      /*vertical-align: middle;*/
      display: table;
    }
    .loginbg {
      /*display: inline-table;*/
      display: table-cell;
      vertical-align: middle;
    }
    .login_container {
      display: inline-table;
      padding: 12px 16px;
      padding-top: 40px;
      background: rgba(225, 225, 225, .8);
      border-radius: 5px;
      /*opacity: 0.4;*/
    }

    .loginbg h4 {
      display: inline-table;
    }
    .loginlist {
      display: inline-table;
    }
    .btn {
      border-radius: 0px;
      width: 90px;
      height: 90px;

      display: table-cell;
      vertical-align: middle;
    }
    .buttoncontainer {
      margin: 4px;
      display: inline-block;
    }
    </style>
