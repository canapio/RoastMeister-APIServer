<div class="main-body main">
  <h1 class="page-header">Dashboard</h1>

  <div class="row placeholders">
    <div class="col-xs-offset-0 col-xs-12 col-sm-offset-0 col-sm-12 placeholder">
      <div id="chartContainer" style="height: 260px; width: 100%;"></div>
      <h4>Summary Chart</h4>
      <span class="text-muted">This data based on below table.</span>
    </div>
  </div>

  <h2 class="sub-header">Section title</h2>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>#</th>
          <th><a onclick="reloadDataWithSortField('name');">Name <i id="name_arrow" class="fa fa-caret-down"></i></a></th>
          <th><a onclick="reloadDataWithSortField('count');">Count <i id="count_arrow" class="fa fa-caret-up"></i></a></th>
          <th><a onclick="reloadDataWithSortField('created_at');">Created Date <i id="created_at_arrow" class="fa fa-caret-down"></i></a></th>
          <th><a onclick="reloadDataWithSortField('updated_at');">Updated Date <i id="updated_at_arrow" class="fa fa-caret-down"></i></a></th>
        </tr>
      </thead>
      <tbody id="tablebody"></tbody>
      <script type="text/javascript">
        var data = <%-JSON.stringify(data)%>

        var latestSort = {};


        function reloadDataWithSortField(sortby) {
          var order = 1
          if (latestSort && latestSort[sortby] != null && latestSort[sortby]==1) {order = -1}
          latestSort = {}
          latestSort[sortby] = order

          if (data[0] && data[0][sortby]) {
            data.sort(function (a, b) {
              if (a[sortby] > b[sortby]) {return (-1)*order;}
              else if (a[sortby] < b[sortby]) {return (1)*order;}
              else {return 0;}
            })
          }
          reloadData()

          $("#name_arrow").attr('class','fa fa-caret-down');
          $("#count_arrow").attr('class','fa fa-caret-down');
          $("#created_at_arrow").attr('class','fa fa-caret-down');
          $("#updated_at_arrow").attr('class','fa fa-caret-down');
          $("#name_arrow").css('opacity', '0.5');
          $("#count_arrow").css('opacity', '0.5');
          $("#created_at_arrow").css('opacity', '0.5');
          $("#updated_at_arrow").css('opacity', '0.5');
          if (order==1) {
          } else {
            $("#" + sortby + "_arrow").attr('class','fa fa-caret-up');
          }
          $("#" + sortby + "_arrow").css('opacity', '1');
        }
        function reloadData () {
          var html = ""
          for (var i=0; i<data.length; i++) {
            html += '<tr>'
            html += '<td>' + String(i+1)  + '</td>'
            html += '<td>' + data[i]["name"] + '</td>'
            html += '<td>' + data[i]["count"] + '</td>'
            html += '<td>' + data[i]["created_at"] + '</td>'
            html += '<td>' + data[i]["updated_at"] + '</td>'
            html += '</tr>'
          }
          $("#tablebody").html(html)
        }

        function reloadChartData(data) {
          var dataPoints = []
          var dataPointCount = 7
          var othersCount = 0
          for (var i=0; i<data.length; i++) {
            if (data[i]["count"]) {
              if (i < dataPointCount) {
                dataPoints.push({
                  y: data[i]["count"],
                  indexLabel: data[i]["name"]
                })
              } else {
                othersCount += data[i]["count"]
              }
            }
          }
          if (othersCount>0) {
            dataPoints.push({
              y: othersCount,
              indexLabel: "others"
            })
          }
         	var chart = new CanvasJS.Chart("chartContainer", {
        		theme: "theme2",
        		data: [{
        			type: "pie",
        			showInLegend: true,
        			toolTipContent: "{y} - #percent %",
        			legendText: "{indexLabel}",
        			dataPoints: dataPoints
        		}]
        	});
        	chart.render();
        }

        $( document ).ready(function() {

          // 왼쪽 메뉴 활성
          var title = "<%= title %>";
          $("#" + title + "_li").attr("class", "active collapsed active")

          // data를 정렬 및 화면에 뿌림
          reloadDataWithSortField("count")

          // data를 기반으로 상단의 차트 표시
          reloadChartData(data)

        });

        </script>
    </table>
